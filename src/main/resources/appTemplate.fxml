<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/8.0.201" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="AfkController">
    <HBox fx:id="UpBarre" style="-fx-background-color: #23272a" alignment="BASELINE_RIGHT" spacing="5.0">
        <padding>
            <Insets topRightBottomLeft="2.0"/>
        </padding>
        <Button maxHeight="25.0" maxWidth="25.0" minHeight="25.0" minWidth="25.0"
                style="-fx-background-color: Transparent; -fx-border-color: Green; -fx-border-radius: 100; -fx-border-width: 2; -fx-background-radius: 100;"
                fx:id="btnGreen"/>
        <Button maxHeight="25.0" maxWidth="25.0" minHeight="25.0" minWidth="25.0"
                style="-fx-background-color: Transparent; -fx-border-color: Orange; -fx-border-radius: 100; -fx-border-width: 2; -fx-background-radius: 100;"
                fx:id="btnOrange"/>
        <Button maxHeight="25.0" maxWidth="25.0" minHeight="25.0" minWidth="25.0"
                style="-fx-background-color: Transparent; -fx-border-color: Red; -fx-border-radius: 100; -fx-border-width: 2; -fx-background-radius: 100;"
                fx:id="btnRed"/>
    </HBox>
    <HBox style="-fx-background-color: linear-gradient(from 25% 25% to 75% 75%,#312783, #00a0e6, #71CBF4);"
          AnchorPane.leftAnchor="0.0" alignment="CENTER_LEFT" spacing="10.0">
        <ImageView fitWidth="50.0" layoutX="14.0" preserveRatio="true">
            <Image url="@icons8_clown_fish_96px.png"/>
        </ImageView>
        <Text fill="WHITE" text="SmartFish">
            <font>
                <Font size="20.0"/>
            </font>
        </Text>
        <HBox HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT">
            <TextField promptText="Heure"
                       style="-fx-background-color: TRANSPARENT; -fx-text-fill: #FFFFFF;"
                       fx:id="AreaToTape" maxWidth="75.0" minWidth="75.0"/>
        </HBox>
    </HBox>
    <HBox>
        <TextArea fx:id="ConsoleZone"/>
        <VBox>
            <padding>
                <Insets topRightBottomLeft="20.0"/>
            </padding>
            <HBox>
                <VBox spacing="11.0" prefWidth="200.0">
                    <padding>
                        <Insets right="20.0" top="20.0"/>
                    </padding>
                    <HBox prefHeight="15.0" style="-fx-background-color: #808080; -fx-background-radius: 100;"/>
                    <HBox prefHeight="15.0" style="-fx-background-color: #808080; -fx-background-radius: 100;"/>
                    <HBox prefHeight="15.0" style="-fx-background-color: #808080; -fx-background-radius: 100;"/>
                </VBox>
                <ImageView fitHeight="100.0" preserveRatio="true">
                    <Image url="@Avatar.png"/>
                </ImageView>
            </HBox>
            <VBox spacing="11.0">
                <HBox prefHeight="15.0" style="-fx-background-color: #808080; -fx-background-radius: 100;"/>
                <HBox prefHeight="15.0" style="-fx-background-color: #808080; -fx-background-radius: 100;"/>
                <HBox prefHeight="15.0" style="-fx-background-color: #808080; -fx-background-radius: 100;"/>
                <HBox prefHeight="15.0" style="-fx-background-color: #808080; -fx-background-radius: 100;"/>


                <HBox>
                    <HBox HBox.hgrow="ALWAYS" alignment="CENTER_LEFT">
                        <Button style="-fx-border-color: #d9534f; -fx-background-color: white; -fx-border-radius: 10; -fx-background-radius: 10;"
                                maxHeight="25.0" maxWidth="100.0" minHeight="25.0" minWidth="100.0"
                                fx:id="btnNothing"/>
                    </HBox>
                    <HBox HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT">
                        <Button style="-fx-border-color: #5CB85C; -fx-background-color: white; -fx-border-radius: 10; -fx-background-radius: 10;"
                                maxHeight="25.0" maxWidth="100.0" minHeight="25.0" minWidth="100.0"
                                fx:id="btnLaunch"/>
                    </HBox>


                </HBox>
            </VBox>
        </VBox>
    </HBox>
</VBox>
