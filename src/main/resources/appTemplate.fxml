<?xml version="1.0" encoding="UTF-8"?>


<?import Composants.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.201" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="AfkController" stylesheets="ProgressBar.css">
    <padding>
        <Insets right="20.0"/>
    </padding>
    <center>
        <VBox style="-fx-background-color: #2b2b2b;">
            <Canvas fx:id="SmartPlace" height="500.0" width="500.0"
                    style="-fx-border-color: BLACK; -fx-border-width: 1;"/>
            <HBox>
                <VBox>
                    <HBox spacing="5.0" alignment="CENTER"
                          style="-fx-background-color: #3c3f41; -fx-border-color: #000000; -fx-border-width: 1 0 0 0;" fx:id="colorList">
                        <padding>
                            <Insets topRightBottomLeft="5.0"/>
                        </padding>
                        <ButtonColor clicked="true" color="#FFFFFF"/>
                        <ButtonColor clicked="false" color="#E4E4E4"/>
                        <ButtonColor clicked="false" color="#888888"/>
                        <ButtonColor clicked="false" color="#222222"/>
                        <ButtonColor clicked="false" color="#FFA7D1"/>
                        <ButtonColor clicked="false" color="#E50000"/>
                        <ButtonColor clicked="false" color="#E59500"/>
                        <ButtonColor clicked="false" color="#A06A42"/>
                        <ButtonColor clicked="false" color="#E5D900"/>
                        <ButtonColor clicked="false" color="#94E044"/>
                        <ButtonColor clicked="false" color="#02BE01"/>
                        <ButtonColor clicked="false" color="#00D3DD"/>
                        <ButtonColor clicked="false" color="#0083C7"/>
                        <ButtonColor clicked="false" color="#0000EA"/>
                        <ButtonColor clicked="false" color="#CF6EE4"/>
                        <ButtonColor clicked="false" color="#820080"/>
                    </HBox>
                    <ProgressBar fx:id="progress" prefWidth="500.0"/>
                </VBox>
            </HBox>
        </VBox>
    </center>
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: #3c3f41;" fx:id="UpBarre">
            <padding>
                <Insets left="5"/>
            </padding>
            <ImageView fitWidth="20.0" layoutX="14.0" preserveRatio="true">
                <Image url="@icons8_clown_fish_96px.png"/>
            </ImageView>
            <HBox HBox.hgrow="ALWAYS" alignment="CENTER_LEFT">
                <TextField promptText="Heure"
                           style="-fx-background-color: TRANSPARENT; -fx-text-fill: #FFFFFF;"
                           fx:id="AreaToTape" maxWidth="75.0" minWidth="75.0"/>
            </HBox>
            <HBox alignment="BASELINE_RIGHT" spacing="5.0">
                <padding>
                    <Insets topRightBottomLeft="2.0"/>
                </padding>
                <Button maxHeight="25.0" maxWidth="25.0" minHeight="25.0" minWidth="25.0"
                        style="-fx-background-color: Transparent; -fx-border-color: Green; -fx-border-radius: 100; -fx-border-width: 2; -fx-background-radius: 100;"
                        fx:id="btnCollapse"/>
                <Button maxHeight="25.0" maxWidth="25.0" minHeight="25.0" minWidth="25.0"
                        style="-fx-background-color: Transparent; -fx-border-color: Orange; -fx-border-radius: 100; -fx-border-width: 2; -fx-background-radius: 100;"
                        fx:id="btnOnTop"/>
                <Button maxHeight="25.0" maxWidth="25.0" minHeight="25.0" minWidth="25.0"
                        style="-fx-background-color: Transparent; -fx-border-color: Red; -fx-border-radius: 100; -fx-border-width: 2; -fx-background-radius: 100;"
                        fx:id="btnClose"/>
            </HBox>
        </HBox>
    </top>
    <left>
        <VBox style="-fx-background-color: #3c3f41; -fx-border-color: #323232; -fx-border-radius: 0; -fx-border-width: 0 1 0 0; -fx-background-radius: 0;">
            <SideMenuButton texte="Home Page" icon="@icons8_home_96px_1.png" active="true"/>
            <SideMenuButton texte="User" icon="@icons8_female_back_96px.png" active="false"/>
            <SideMenuButton texte="Place" icon="@icons8_minecraft_sword_96px.png" active="false"/>
            <SideMenuButton texte="Youtube" icon="@icons8_youtube_96px_1.png" active="false"/>
        </VBox>
    </left>

</BorderPane>
